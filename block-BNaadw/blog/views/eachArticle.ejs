<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Each Article</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header class="border-2 shadow-sm p-8 text-xl flex justify-between">
        <div>
            <a class="border-2 bg-green-500 py-1 px-3 rounded-md text-white" href="/articles/new">Add Articles</a>
            <a class="border-2 bg-green-500 py-1 px-3 rounded-md text-white" href="/articles">list of Articles</a>

        </div>
        <a class="border-2 bg-red-500 py-1 px-3 rounded-md text-white" href="/users/logout">Logout</a>
    </header>


    <main>
        <section>
            <div class="">
                <h2><%= articles.title  %> </h2>
                <h2><%= articles.description  %> </h2>

                <h2><%= articles.likes ? articles.likes : 0 %> </h2>

                <a href="/articles/<%=articles.slug%>/edit ">
                    <button class="bg-blue-500 border-2 px-3 py-1 rounded-md">Edit</button>
                </a>

                <a href="/articles/<%=articles.slug%>/delete ">
                    <button class="bg-red-500 border-2 px-3 py-1 rounded-md">delete</button>
                </a>

                <a href="/articles/<%=articles.slug  %>/likes ">
                    <button class="bg-green-500 border-2 px-3 py-1 rounded-md">Like</button>
                </a>
                <a href="/articles/<%=articles.slug  %>/dislikes ">
                    <button class="bg-green-500 border-2 px-3 py-1 rounded-md">dislikes</button>
                </a>
            </div>
        </section>

        <!-- comments -->

        <section>
            <form action="/articles/<%=articles._id%>/comments" method="POST">
                <textarea class="border-2 mt-5" name="message" id="" cols="30" rows="4"></textarea>
                <input class="bg-blue-400 block border-2 px-3 py-1 rounded-md" type="submit">
            </form>


            <% articles.comments.forEach((element) => { %>
             <p><%= element.message %> </p>
            <% }) %>
        </section>
    </main>

</body>
</html>
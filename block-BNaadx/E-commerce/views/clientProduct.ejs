<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Products</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header class="border-2 py-8 px-6">
      <div class="flex justify-between items-center">
        <a
          class="text-xl border-2 py-1 px-4 rounded-md bg-green-400 text-white"
          href="/dashboard"
          >Back</a
        >
        <a
          class="text-xl border-2 py-1 px-4 rounded-md bg-red-400 text-white"
          href="/users/logout"
          >Logout</a
        >
      </div>
    </header>

    <main class="w-full">
      <section class="w-full h-full">
        <div class="w-full flex justify-between flex-wrap mt-10">
          <% products.forEach((product) => { %>
          <div class="w-3/12 border-2 py-5 px-10 leading-10 shadow-md">
            <img class="w-full" src="<%=product.image  %> " alt="image tv" />
            <h2 class="text-2xl text-green-700 font-bold">
              <%=product.name %>
            </h2>
            <p class="text-xl font-bold text-blue-500">
              Price : <%=product.price %>
            </p>
            <h3 class="text-red-500 font-bold">
              Quantitiy : <%= product.quantity %>
            </h3>
            <p><% product.likes ? product.likes : 0 %></p>
            <a href="/client/<%=product.id%>">
              <button
                class="
                  border-2
                  px-6
                  text-white
                  font-bold
                  rounded-lg
                  bg-green-300
                "
              >
                View Product
              </button>
            </a>
          </div>
          <% }) %>
        </div>
      </section>
    </main>
  </body>
</html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header class="border-2 py-8 px-6">
      <div class="flex justify-between items-center">
        <a
          href="users/login"
          class="text-xl border-2 py-1 px-4 rounded-md text-white bg-red-500"
          >Login</a
        >
        <a
          href="/users/register"
          class="text-xl border-2 py-1 px-4 rounded-md bg-green-400 text-white"
          >Register</a
        >
      </div>
    </header>

    <section class="h-screen">
      <div class="h-4/6 flex justify-center items-center">
        <form
          action="/users/login"
          method="POST"
          class="w-1/3 border-2 p-4 rounded"
        >
          <h2 class="text-center text-blue-400 mb-4">Login</h2>
          <input type="email" name=email" class=" border-2 w-full mt-5 py-2 px-2
          rounded-md focus:outline-none focus:border-green-400 "
          placeholder="Email">
          <input
            type="password"
            name="password"
            placeholder="Password"
            class="
              border-2
              w-full
              mt-5
              py-2
              px-2
              rounded-md
              focus:outline-none focus:border-green-400
            "
          />
          <div class="text-center">
            <input
              type="submit"
              class="
                border-2
                w-full
                mt-5
                py-2
                px-2
                rounded-md
                focus:outline-none focus:border-green-400
              "
            />
          </div>
        </form>
      </div>
    </section>
  </body>
</html>
